<div class="container">
	<div class="row">
	  <div class="col-lg-12 text-center p-0">
	    <p class="heading-text text-left">A fast and easy way to capture your claim photos and documents!</p>
	    <div class="col-lg-12">
	      <div class="row">
	        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8 bg-wooden"></div>
	        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 bg-red"></div>
	      </div>
	    </div>
	    <p class="text-left m-b-0 padding-p-text">Claim no: 2</p>
	    <p class="text-left name-text">Arslan Ahmad</p>
	    <h4 class="text-left padding-p-text font-weight photo-upload">Photo upload/capture</h4>
	  </div>
	</div>
	<div class="row">
		<%= form_for @image, url:{action: "create"},html: {class:"form"} do |f| %>
	  <div class="col-lg-12 photo-bg">
	  	<%= f.fields_for :picture do |photo| %>
	    <div class="row">
	      <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 m-t-10 m-b-10">
	        <span class="photo-title">Damage room overview 1<span class="mandatory">*</span></span>
	        <div class="col-lg-12 capture-box">	 
	          <img id="img_prev1" src="#"/>            	
	          <%= photo.file_field :photo_one , class: "form-control", onchange: "photo_one(this);"%>	          
	        </div>
	      </div>
	      <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 m-t-10 m-b-10">
	        <span class="photo-title">Damage room overview 2<span class="mandatory">*</span></span>
	        <div class="col-lg-12 capture-box">
	        	<img id="img_prev2" src="#"/>
	          <%= photo.file_field :photo_two , class: "form-control", onchange: "photo_two(this);"%>
	        </div>
	      </div>
	      <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 m-t-10 m-b-10">
	        <span class="photo-title">Detail of damage 1<span class="mandatory">*</span></span>
	        <div class="col-lg-12 capture-box">
	        	<img id="img_prev3" src="#"/>
	          <%= photo.file_field :photo_three , class: "form-control", onchange: "photo_three(this);"%>
	        </div>
	      </div>
	      <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 m-t-10 m-b-10">
	        <span class="photo-title">Detail of damage 2<span class="mandatory">*</span></span>
	        <div class="col-lg-12 capture-box">
	        	<img id="img_prev4" src="#"/>
	          <%= photo.file_field :photo_four , class: "form-control", onchange: "photo_four(this);"%>
	        </div>
	      </div>
	      <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 m-t-10 m-b-10">
	        <span class="photo-title">Additional photos/docs<span class="mandatory">*</span></span>
	        <div class="col-lg-12 capture-box">
	        	<img id="img_prev5" src="#"/>
	          <%= photo.file_field :photo_five , class: "form-control", onchange: "photo_five(this);"%>
	        </div>
	      </div>
	    </div>
	    <%end%>
	  </div>
	  <div class=" m-t-10 m-b-10">
	    <div class="col-lg-12">
	      <input type="checkbox" name="checkbox" required> <span class="font-weight">I agree to the <a href="#" class="text-decoration"> Terms & Conditions</a></span>
	    </div>
	  </div>
    <div class="col-lg-12 text-center">
      <%= f.submit "SEND", class: "btn btn-danger col-lg-2 col-md-2 col-sm-6"%>
    </div>    
	</div>
	<%end%>
</div>
